<div class="section">
  <%= simple_form_for @contact do |c| %>
    <div class="field">
      <div class="control">
        <%= c.input :email, 
          input_html: { class: 'input'}, 
          wrapper: false, 
          label_html: { class: 'label' } 
        %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= c.input :name, 
          input_html: { class: 'input'}, 
          wrapper: false, 
          label_html: { class: 'label' } 
        %>
      </div>
    </div>
    <%= c.button :submit, 'Submit', class: "button is-primary" %>
  <% end %>
</div>
